doctype html
html
  head
    meta(charset="utf-8")
    title Triangle Contains Point
    script(src="../../lib/za_geom2d.min.js")
    script(src="../../src/Bu.dev.js")
    script(type="text/javascript").

      var renderer;
      var triangle;
      var mousePos = new Bu.Point();

      $.ready(init);

      function init() {
        renderer = new Bu.Renderer({
          container: "#container"
        });
        triangle = generateTriangle();
        renderer.append(triangle);

        renderer.dom.addEventListener("mouseup", onMouseUp);
        renderer.dom.addEventListener("mousemove", onMouseMove);
      }

      function onMouseMove(e) {
        mousePos.x = e.offsetX;
        mousePos.y = e.offsetY;
        if (triangle.containsPoint(mousePos))
          triangle.fillStyle = Bu.DEFAULT_FILL_STYLE_HOVER;
        else
          triangle.fill();
      }

      function onMouseUp(e) {
        triangle = renderer.shapes[0] = generateTriangle();
      }

      function generateTriangle() {
        var points = [];
        for (var i = 0; i < 3; i++) {
          points[i] = new Bu.Point(
                  Math.random() * (renderer.width - 60) + 30,
                  Math.random() * (renderer.height - 60) + 30
          );
        }

        var _triangle = new Bu.Triangle(points[0], points[1], points[2]);
        _triangle.points[0].label = "A";
        _triangle.points[1].label = "B";
        _triangle.points[2].label = "C";
        return _triangle;
      }

  body
    div Move cursor to test. Click to change another triangle.
    div#container
