doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		title Bitmap font
		script(src="../build/bu.js")
		style.
			html, body {
				margin: 0;
				width: 100%;
				height: 100%;
				overflow: hidden;
			}

			#info {
				position: absolute;
				width: 100%;
				text-align: center;
				padding: 8px 0;
			}
		script(type="text/javascript").

			var bu = new Bu.App({
				data: {
					x: 300,
					y: 200,
					radius: 15,
					url: 'assets/sprite-sheets/nes-font.json',
					text: 'Hello, Bu.js!',
				},
				objects: function () {
					return {
						pointText: new Bu.PointText('', this.x, this.y),
						pivot: new Bu.Circle(this.radius, this.x, this.y),
					};
				},
				init: function () {
					this.$objects.pointText.font = new Bu.SpriteSheet(this.url);

					document.querySelector("#text").value = this.text;
					this.updateText(this.text);

					this.$renderer.scene.addChild(this.$objects.pivot);
					this.$renderer.scene.addChild(this.$objects.pointText);
				},
				methods: {
					updateText: function (text) {
						this.$objects.pointText.text = text;
					},
				},
			});

	body
		div#info
			span Bitmap font implemented by sprite sheets.
			br
			label Input your text:
				input(id="text" type="text" onkeyup="bu.updateText(this.value);")
			br
			span Horizontal Align:
				input#vAlignL(type="radio", name="vAlign", onclick="bu.$objects.pointText.textAlign='left';")
				label(for="vAlignL") left
				input#vAlignC(type="radio", name="vAlign", onclick="bu.$objects.pointText.textAlign='center';", checked)
				label(for="vAlignC") center
				input#vAlignR(type="radio", name="vAlign", onclick="bu.$objects.pointText.textAlign='right';")
				label(for="vAlignR") right
			br
			span Vertical Align:
				input#hAlignT(type="radio", name="hAlign", onclick="bu.$objects.pointText.textBaseline='top';")
				label(for="hAlignT") top
				input#hAlignM(type="radio", name="hAlign", onclick="bu.$objects.pointText.textBaseline='middle';", checked)
				label(for="hAlignM") middle
				input#hAlignB(type="radio", name="hAlign", onclick="bu.$objects.pointText.textBaseline='bottom';")
				label(for="hAlignB") bottom
