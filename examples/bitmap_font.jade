doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Bu.js demo - shapes
    script(src="../build/bu.js")
    style.
      html, body {
        margin: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
      }

      #info {
        position: absolute;
        width: 100%;
        text-align: center;
        padding: 8px 0;
      }
    script(type="text/javascript").

      var bu;
      var pointText, pivot;
      var fontSheet;
      var x = 300, y = 200;

      var url = 'assets/sprite-sheets/nes-font.json';
      var text = 'Hello, Bu.js!';

      $.ready(init);
      function init() {
        bu = new Bu();

        pointText = new Bu.PointText();
        pointText.position.x = x;
        pointText.position.y = y;
        bu.add(pointText);

        pivot = new Bu.Circle(15, x, y);
        bu.add(pivot);

        fontSheet = new Bu.SpriteSheet(url);
        pointText.font = fontSheet;

        document.querySelector("#text").value = text;
        updateText(text);
      }

      function updateText(text) {
        pointText.text = text;
      }

  body
    div#info
      span Bitmap font implemented by sprite sheets.
      br
      label Input your text:
        input(id="text" type="text" onkeyup="updateText(this.value);")
      br
      span Horizontal Align:
        input#vAlignL(type="radio", name="vAlign", onclick="pointText.textAlign='left';")
        label(for="vAlignL") left
        input#vAlignC(type="radio", name="vAlign", onclick="pointText.textAlign='center';", checked)
        label(for="vAlignC") center
        input#vAlignR(type="radio", name="vAlign", onclick="pointText.textAlign='right';")
        label(for="vAlignR") right
      br
      span Vertical Align:
        input#hAlignT(type="radio", name="hAlign", onclick="pointText.textBaseline='top';")
        label(for="hAlignT") top
        input#hAlignM(type="radio", name="hAlign", onclick="pointText.textBaseline='middle';", checked)
        label(for="hAlignM") middle
        input#hAlignB(type="radio", name="hAlign", onclick="pointText.textBaseline='bottom';")
        label(for="hAlignB") bottom
